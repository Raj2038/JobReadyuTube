
@{
    ViewBag.Title = "Register";
}

<h4>Register</h4>

<form id="register-form">
    <div class="form-group">
        <label style="text-align:right" for="exampleInputEmail1">Username</label>
        <input type="text" class="form-control" name="Username" id="Username" placeholder="Username">
    </div>

    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" class="form-control" name="Password" id="Password" placeholder="Password">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Email</label>
        <input type="email" class="form-control" name="Email" id="Email" placeholder="Email">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Confirm Password</label>
        <input type="password" class="form-control" Name="ConfirmPassword" id="confirmPassword" placeholder="Confirm Password">
    </div>

    <button id="Submitbtn" class="btn btn-default btn-primary">Submit</button>
    <button class="btn btn-default">Cancel</button>
</form>

<script>

    //Use ajax to send register data to /Account/Register

    $('#register-form #Submitbtn').click(function () {
        alert('U have clicked the submit button. Use ajax to send Register info to /Account/Register');
        debugger;
        var formData = $('#register-form').serialize();
        $.ajax({
            url: "@Url.Action("Register","Account")",
            type: "POST",
            dataType: "json",
            data: formData,
            success: function (result) {
                debugger;
                if (result.Success) {
                    alert("Login successful");
                }
            },
            error: function () {

            }
        });



    })

</script>